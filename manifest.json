{
  "manifest_version": 2,
  "name": "Ctrl+Middle Click Search",
  "version": "1.0.0",
  "description": "Search selected text on Google with Ctrl + middle mouse button click",

  "permissions": [
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{a7163ecc-2cfc-4e3c-87d9-4ba24cb6efd1}",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
